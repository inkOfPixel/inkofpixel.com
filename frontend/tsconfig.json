{
    "compilerOptions": {
      "allowJs": true,
      "alwaysStrict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "lib": ["dom", "es2019"],
      "module": "esnext",
      "moduleResolution": "node",
      "noEmit": true,
      "noFallthroughCasesInSwitch": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": true,
      "target": "esnext",
      "baseUrl": ".",
      "paths": {
        "@config/*": ["config/*"],
        "@graphql/*": ["graphql/*"],
        "@cms/*": ["cms/*"],
        "@layouts": ["layouts"],
        "@layouts/*": ["layouts/*"],
        "@components/*": ["components/*"],
        "@features/*": ["features/*"],
        "@assets/*": ["assets/*"],
        "@theme": ["theme"]
      }
    },
    "exclude": ["node_modules"],
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "@types/index.d.ts", "next.config.js"]
  }
  